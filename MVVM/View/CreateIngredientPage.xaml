<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecipeMobileAPp.MVVM.View.CreateIngredientPage"
             Title="CreateIngredientPage">
    <VerticalStackLayout>
        <Label 
            Text="Add Ingredients"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Ingredients" x:Name="ingredientsEntryField"/>
        </Frame>

        <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Quantiy" x:Name="qtyEntryField"/>
        </Frame>

        <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Unit" x:Name="unitEntryField"/>
        </Frame>

        <Button Text="Add" HeightRequest="50" WidthRequest="70"/>
    </VerticalStackLayout>
</ContentPage>
