<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecipeMobileAPp.MVVM.View.CreateIngredientPage"
             xmlns:vm="clr-namespace:MovieRecipeMobileAPp.MVVM.ViewModel"
             x:DataType="vm:AddIngredientsViewModel"
             Title="CreateIngredientPage">
    <VerticalStackLayout>
        <Label 
            Text="Add Ingredients"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Ingredients" x:Name="ingredientsEntryField" Text="{Binding IngredientName, Mode=TwoWay}"/>
        </Frame>

        <Button Text="Add Ingredient" HeightRequest="50" WidthRequest="70" Command="{Binding AddIngredeintCommand}"/>
        <ListView SelectionMode="None" ItemsSource="{Binding Ingredients}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
