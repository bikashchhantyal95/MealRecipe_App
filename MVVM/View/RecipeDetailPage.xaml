    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label 
            Text="{Binding Recipe.Name}"
            FontSize="Large"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


            <Label 
            Text="{Binding Recipe.Description}"
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Label 
            Text="{Binding Recipe.Instructions}"
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
