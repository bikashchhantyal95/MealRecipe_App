<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecipeMobileAPp.MVVM.View.RecipeDetailPage"
             xmlns:vm="clr-namespace:MovieRecipeMobileAPp.MVVM.ViewModel"
             x:DataType="vm:RecipeDetailsViewModel"
             Title="RecipeDetailPage">
    
    <Grid Margin="15" RowDefinitions=".4*, .1*, .1*, .4*">
        <Border Grid.RowSpan="2">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20, 20, 20, 20"/>
            </Border.StrokeShape>
            <Grid RowDefinitions=".3*, .7*">
                <Image
                Grid.RowSpan="2"
                Aspect="AspectFill"
                Source="dotnet_bot.svg"
                    />
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.RowSpan="2">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30, 30, 30, 30"/>
            </Border.StrokeShape>
            <Grid ColumnDefinitions=".40*, 30*, 15*, 15*"
                  RowDefinitions="*,*,*"
                  Padding="20">
                <Label Grid.ColumnSpan="2"
                       FontAttributes="Bold"
                       FontSize="25"
                       Text="{Binding Recipe.Name}"
                       />

                <Border Margin="0, 0, 0, 0"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        WidthRequest="50"
                        Grid.Column="3"
                        >
                      <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10, 10, 10, 10"/>
                      </Border.StrokeShape>
                      <Label
                          FontFamily="Icons"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Text="&#xE801;"
                          FontSize="25"
                          />
                </Border>

                <Border Margin="0, 0, 0, 0"
                        HeightRequest="50"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        WidthRequest="50"
                        Grid.Column="4"
                        >
                      <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10, 10, 10, 10"/>
                      </Border.StrokeShape>
                      <Label
                          FontFamily="Icons"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Text="Edit"
                          FontSize="25"
                          />
                     
                </Border>
                
            </Grid>
        </Border>
        <Button Grid.Row="2" Text="Ingredients" Clicked="AddIngredients_Button_Clicked"/>
    </Grid>

</ContentPage>
