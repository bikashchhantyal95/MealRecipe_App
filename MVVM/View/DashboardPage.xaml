    <StackLayout>
        <Frame CornerRadius="10" BackgroundColor="#cccccc" Margin="5">
            <SearchBar CancelButtonColor="White" Placeholder="Search Recipes"
                       TextColor="White" PlaceholderColor="WhiteSmoke"/>
        </Frame>
        <CollectionView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:RecipeModel">
                    <SwipeView>
                         <SwipeView.RightItems>
                            <SwipeItems SwipeBehaviorOnInvoked="Close">
                                <SwipeItem BackgroundColor="Red"
                                           CommandParameter="{Binding .}"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipeViewModel}}, Path=RemoveRecipeCommand}"
                                           Text="Delete" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                         <Frame BorderColor="Black"
                               CornerRadius="5"
                               Margin="5"
                               Padding="10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipeViewModel}}, Path=GoToDetailspageCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <StackLayout>
                                <Label Text="{Binding Name}"
                                       StyleClass="LightBlue, CardTitle"/>
                            </StackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
        <StackLayout Orientation="Horizontal" Spacing="4">
            <Button WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="50"
                    Text="+"
                    FontSize="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Clicked="AddRecipeButton_Tapped"/>
            <Button WidthRequest="100"
                    HeightRequest="60"
                    CornerRadius="50"
                    Text="+"
                    FontSize="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Clicked="AddIngredientsBtn_Tapped"/>
            </StackLayout>
    </StackLayout>

