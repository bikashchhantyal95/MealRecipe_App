    <Grid RowDefinitions=".10*, .10*, .80*" Margin="20">
        <StackLayout Orientation="Vertical" Grid.Row="0">
            <Label Text="What would you "
               FontAttributes="Bold"
               FontSize="40"/>
            <Label Text="like to cook?"
                   FontAttributes="Bold"
                   FontSize="40"/>
        </StackLayout>

        <StackLayout Grid.Row="1" Margin="0, 0, 20,20">
            <Border StrokeShape="RoundRectangle 10">
                <HorizontalStackLayout>
                    <SearchBar/>
                </HorizontalStackLayout>
            </Border>
        </StackLayout>
        

        <VerticalStackLayout Grid.Row="2">
            <Label Text="Recipes"
                   FontAttributes="Bold"
                   FontSize="40"/>
            <CollectionView ItemsSource="{Binding AllRecipes}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Vertical"
                        ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:RecipeModel">
                        <Frame HeightRequest="100">
                            <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipeViewModel}}, Path=GoToDetailspageCommand}"
                                        CommandParameter="{Binding .}"
                                        />

                             </Frame.GestureRecognizers>
                            <Grid RowDefinitions="*,*,*">
                                <Label Text="{Binding Name}" />
                                <HorizontalStackLayout Grid.Row="1">
                                    <Label Text="By"/>
                                    <Label Text="{Binding Author}"
                                           FontAttributes="Bold"
                                           FontSize="Caption"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Grid.Row="2">
                                    <Label Text="{Binding CookingTime}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Grid>

