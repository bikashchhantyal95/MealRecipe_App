<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecipeMobileAPp.MVVM.View.CreateRecipePage"
             xmlns:vm="clr-namespace:MovieRecipeMobileAPp.MVVM.ViewModel"
             x:DataType="vm:CreateRecipeViewModel"
             Title="Create Recipe Page">
    <ScrollView>
        <VerticalStackLayout Margin="0, 25, 0, 25">
            <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Name of Recipe" Text="{Binding Name}" x:Name="nameEntryField"/>
            </Frame>

            <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Description" Text="{Binding Description}" x:Name="descEntryField"/>
            </Frame>

            <Frame Padding="15, 6, 15, 6" Margin="20, 5, 20, 15">
                <Entry Placeholder="Instructions" Text="{Binding Instructions}" x:Name="instructionsEntryField"/>
            </Frame>

            <Button Text="Add Recipe" Padding="15" Margin="20, 0, 20, 0" Command="{Binding CreateRecipe}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
