<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecipeMobileAPp.MVVM.View.CreateRecipePage"
             Title="CreateRecipePage">
    <ScrollView>
        <VerticalStackLayout Margin="0, 25, 0, 25">
            <Frame Padding="15, 6, 15, 6">
                <Entry Placeholder="Name of Recipe"/>
            </Frame>

            <Frame Padding="15, 6, 15, 6">
                <Entry Placeholder="Description"/>
            </Frame>

            <Frame Padding="15, 6, 15, 6">
                <Entry Placeholder="Instructions"/>
            </Frame>

            <Button Text="Add Recipe" Padding="15" Margin="20, 0, 20, 0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
